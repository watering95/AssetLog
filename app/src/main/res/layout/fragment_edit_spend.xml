<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="com.example.watering.assetlog.model.Converter"/>
        <variable name="adapterMain" type="android.widget.ArrayAdapter"/>
        <variable name="adapterSub" type="android.widget.ArrayAdapter"/>
        <variable name="adapterApproval2" type="android.widget.ArrayAdapter"/>
        <variable name="viewmodel" type="com.example.watering.assetlog.viewmodel.ViewModelEditSpend"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/fragment_edit_spend"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:text="계좌 / 카드"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView4" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="@+id/spinner_approval2_fragment_edit_spend"
                app:layout_constraintBottom_toBottomOf="@+id/spinner_approval2_fragment_edit_spend"/>
        <TextView
                android:text="부카테고리"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView7"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="@+id/spinner_categorysub_fragment_edit_spend"
                app:layout_constraintBottom_toBottomOf="@+id/spinner_categorysub_fragment_edit_spend"/>
        <TextView
                android:text="날짜"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintTop_toTopOf="@+id/edit_date_fragment_edit_spend"
                app:layout_constraintBottom_toBottomOf="@+id/edit_date_fragment_edit_spend"/>
        <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:ems="10"
                android:text="@={viewmodel.spend.date}"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp" android:id="@+id/edit_date_fragment_edit_spend"
                app:layout_constraintStart_toEndOf="@+id/textView" android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"/>
        <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@={viewmodel.spend.details}"
                android:ems="10"
                android:id="@+id/edit_details_fragment_edit_spend" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/edit_date_fragment_edit_spend" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toEndOf="@+id/textView2"
                android:layout_marginStart="8dp" android:inputType="text"/>
        <TextView
                android:text="내역"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView2" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="@+id/edit_details_fragment_edit_spend"
                app:layout_constraintBottom_toBottomOf="@+id/edit_details_fragment_edit_spend"/>
        <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:text="@={Converter.intToStr(viewmodel.spend.amount)}"
                android:id="@+id/edit_amount_fragment_edit_spend" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/edit_details_fragment_edit_spend"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toEndOf="@+id/textView3"
                android:layout_marginStart="8dp"/>
        <TextView
                android:text="금액"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView3" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="@+id/edit_amount_fragment_edit_spend"
                app:layout_constraintBottom_toBottomOf="@+id/edit_amount_fragment_edit_spend"/>
        <Spinner
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/spinner_categorymain_fragment_edit_spend"
                android:adapter="@{adapterMain}"
                android:selectedItemPosition="@={ viewmodel.idx_cat_main }"
                app:layout_constraintStart_toEndOf="@+id/textView6"
                android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/edit_amount_fragment_edit_spend"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
        <Spinner
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/spinner_categorysub_fragment_edit_spend"
                android:adapter="@{adapterSub}"
                android:selectedItemPosition="@={ viewmodel.idx_cat_sub }"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/spinner_categorymain_fragment_edit_spend"
                app:layout_constraintStart_toEndOf="@+id/textView7" android:layout_marginStart="8dp"/>

        <TextView
                android:text="주카테고리"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView6"
                app:layout_constraintTop_toTopOf="@+id/spinner_categorymain_fragment_edit_spend"
                app:layout_constraintBottom_toBottomOf="@+id/spinner_categorymain_fragment_edit_spend"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"/>
        <TextView
                android:text="결재방식"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView5" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="@+id/spinner_approval1_fragment_edit_spend"
                app:layout_constraintBottom_toBottomOf="@+id/spinner_approval1_fragment_edit_spend"/>
        <Spinner
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/spinner_approval1_fragment_edit_spend"
                android:entries="@array/type"
                android:selectedItemPosition="@={ viewmodel.idx_approval1 }"
                app:layout_constraintStart_toEndOf="@+id/textView5" android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/spinner_categorysub_fragment_edit_spend"/>
        <Spinner
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:selectedItemPosition="@={ viewmodel.idx_approval2 }"
                android:id="@+id/spinner_approval2_fragment_edit_spend" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/spinner_approval1_fragment_edit_spend"
                app:layout_constraintStart_toEndOf="@+id/textView4" android:layout_marginStart="8dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>